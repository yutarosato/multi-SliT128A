<?xml version="1.0"?>
<!-- DON'T REMOVE THE ABOVE LINE.                                     -->
<!-- DON'T PUT ANY LINES ABOVE THE 1ST LINE.                          -->
<!-- Sample config.xml to run SampleReader and SampleMonitor.         -->
<!-- Please rewrite execPath (2 places), confFile (2 places) suitable -->
<!-- for your directory structure.                                    -->
<!-- run.py will create rtc.conf in /tmp/daqmw/rtc.conf               -->
<!-- If you use run.py, set confFile as /tmp/daqmw/rtc.conf           -->
<configInfo>
    <daqOperator>
        <hostAddr>127.0.0.1</hostAddr>
    </daqOperator>
    <daqGroups>
        <daqGroup gid="group0">
            <components>
                <component cid="SampleReader0">
                    <hostAddr>127.0.0.1</hostAddr>
                    <hostPort>50000</hostPort>
                    <instName>SampleReader0.rtc</instName>
                    <execPath>/home/SliT/g-2/elech/multi-SliT128A/museum201706/daqmw/SampleReader/SampleReaderComp</execPath>
                    <confFile>/tmp/daqmw/rtc.conf</confFile>
                    <startOrd>6</startOrd>
                    <inPorts>
                    </inPorts>
                    <outPorts>
                        <outPort>samplereader_out</outPort>
                    </outPorts>
                    <params>
                        <param pid="srcAddr">192.168.2.18</param>
                        <param pid="srcPort">24</param>
                    </params>
                </component>

                <component cid="SampleReader50">
                    <hostAddr>127.0.0.1</hostAddr>
                    <hostPort>50000</hostPort>
                    <instName>SampleReader50.rtc</instName>
                    <execPath>/home/SliT/g-2/elech/multi-SliT128A/museum201706/daqmw/SampleReader5/SampleReader5Comp</execPath>
                    <confFile>/tmp/daqmw/rtc.conf</confFile>
                    <startOrd>5</startOrd>
                    <inPorts>
                    </inPorts>
                    <outPorts>
                        <outPort>samplereader_out5</outPort>
                    </outPorts>
                    <params>
                        <param pid="srcAddr">192.168.5.21</param>
                        <param pid="srcPort">24</param>
                    </params>
                </component>

                <component cid="Merger0">
                    <hostAddr>127.0.0.1</hostAddr>
                    <hostPort>50000</hostPort>
                    <instName>Merger0.rtc</instName>
                    <execPath>/home/SliT/g-2/elech/multi-SliT128A/museum201706/daqmw/Merger/MergerComp</execPath>
                    <confFile>/tmp/daqmw/rtc.conf</confFile>
                    <startOrd>4</startOrd>
                    <inPorts>
                        <inPort from="SampleReader0:samplereader_out" >collector_in0</inPort>
                        <inPort from="SampleReader50:samplereader_out5">collector_in1</inPort>
                    </inPorts>
                    <outPorts>
                        <outPort>slit_merger_out</outPort>
                    </outPorts>
                    <params>
                        <param pid="separate_flag">0</param>
                    </params>
                </component>

		<component cid="Dispatcher0">
		  <hostAddr>127.0.0.1</hostAddr>
		  <hostPort>50000</hostPort>
		  <instName>Dispatcher0.rtc</instName>
		  <execPath>/home/SliT/g-2/elech/multi-SliT128A/museum201706/daqmw/Dispatcher/DispatcherComp</execPath>
		  <confFile>/tmp/daqmw/rtc.conf</confFile>
		  <startOrd>3</startOrd>
		  <inPorts>
                    <inPort from="Merger0:slit_merger_out">dispatcher_in</inPort>
		  </inPorts>
		  <outPorts>
                    <outPort>dispatcher_out1</outPort>
                    <outPort>dispatcher_out2</outPort>
		  </outPorts>
		  <params/>
		</component>

		<component cid="SampleLogger0">
		  <hostAddr>127.0.0.1</hostAddr>
		  <hostPort>50000</hostPort>
		  <instName>SampleLogger0.rtc</instName>
		  <execPath>/home/SliT/g-2/elech/multi-SliT128A/museum201706/daqmw/SampleLogger/SampleLoggerComp</execPath>
		  <confFile>/tmp/daqmw/rtc.conf</confFile>
		  <startOrd>1</startOrd>
		  <inPorts>
                    <inPort from="Dispatcher0:dispatcher_out1">samplelogger_in</inPort>
		  </inPorts>
		  <outPorts/>
		  <params>
                    <param pid="dirName">../data/binary_data</param>
                    <param pid="isLogging">yes</param>
                    <param pid="maxFileSizeInMegaByte">1024</param>
                    <param pid="runsummaryName">../data/run_summary.dat</param>
                    <param pid="RF">560</param>
                    <param pid="VREF2">560</param>
                    <param pid="VREF5">560</param>
                    <param pid="HV">120</param>
                    <param pid="NOTE">Beam Data</param>
		  </params>
		</component>

                <component cid="SampleMonitor0">
                    <hostAddr>127.0.0.1</hostAddr>
                    <hostPort>50000</hostPort>
                    <instName>SampleMonitor0.rtc</instName>
                    <execPath>/home/SliT/g-2/elech/multi-SliT128A/museum201706/daqmw/SampleMonitor/SampleMonitorComp</execPath>
                    <confFile>/tmp/daqmw/rtc.conf</confFile>
                    <startOrd>2</startOrd>
                    <inPorts>
			<inPort from="Dispatcher0:dispatcher_out2">samplelogger_in</inPort>
                    </inPorts>
                    <outPorts>
                    </outPorts>
                    <params>
                        <param pid="monitorUpdateRate">250</param>
                        <param pid="monitorSamplingRate">250</param>
                        <param pid="signal_width">15</param>
                        <param pid="signal_span">50</param>
                    </params>
                </component>
            </components>
        </daqGroup>
    </daqGroups>
</configInfo>
